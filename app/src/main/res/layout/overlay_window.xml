                            <View
                                android:id="@+id/sat28"
                                android:layout_width="4dp"
                                android:layout_height="1dp"
                                android:animateLayoutChanges="true"
                                android:layout_marginEnd="2dp"
                                android:background="@color/transparent_red" />

                            <View
                                android:id="@+id/sat29"
                                android:layout_width="4dp"
                                android:layout_height="1dp"
                                android:animateLayoutChanges="true"
                                android:layout_marginEnd="2dp"
                                android:background="@color/transparent_red" />

                            <View
                                android:id="@+id/sat30"
                                android:layout_width="4dp"
                                android:layout_height="1dp"
                                android:animateLayoutChanges="true"
                                android:layout_marginEnd="2dp"
                                android:background="@color/transparent_red" />

                            <View
                                android:id="@+id/sat31"
                                android:layout_width="4dp"
                                android:layout_height="1dp"
                                android:animateLayoutChanges="true"
                                android:layout_marginEnd="2dp"
                                android:background="@color/transparent_red" />

                            <View
                                android:id="@+id/sat32"
                                android:layout_width="4dp"
                                android:layout_height="1dp"
                                android:animateLayoutChanges="true"
                                android:layout_marginEnd="2dp"
                                android:background="@color/transparent_red" />

                            <View
                                android:id="@+id/sat33"
                                android:layout_width="4dp"
                                android:layout_height="1dp"
                                android:animateLayoutChanges="true"
                                android:layout_marginEnd="2dp"
                                android:background="@color/transparent_red" />

                            <View
                                android:id="@+id/sat34"
                                android:layout_width="4dp"
                                android:layout_height="1dp"
                                android:animateLayoutChanges="true"
                                android:layout_marginEnd="2dp"
                                android:background="@color/transparent_red" />

                            <View
                                android:id="@+id/sat35"
                                android:layout_width="4dp"
                                android:layout_height="1dp"
                                android:animateLayoutChanges="true"
                                android:layout_marginEnd="2dp"
                                android:background="@color/transparent_red" />

                            <View
                                android:id="@+id/sat36"
                                android:layout_width="4dp"
                                android:layout_height="1dp"
                                android:animateLayoutChanges="true"
                                android:layout_marginEnd="2dp"
                                android:background="@color/transparent_red" />


                        </LinearLayout>

                    </HorizontalScrollView>


                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/placement_in_cab"
                android:textColor="@color/transparent_white"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/placedLeft"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/left"
                    android:textColor="@color/transparent_gray"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/placedRight"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/right"
                    android:textColor="@color/transparent_white"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/calibrateBtns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/calibrate"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/set_calibration"
                    android:textColor="@color/transparent_white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/calibrateReset"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/reset_calibration"
                    android:textColor="@color/transparent_white"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="@string/accelerometer"
                    android:textColor="@color/transparent_white"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/graphText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:elevation="10dp"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="Train is movingg"
                        android:textSize="12dp"
                        android:textColor="@color/transparent_white" />

                    <View
                        android:id="@+id/graphHider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#77000000"
                        android:elevation="5dp" />

                    <com.jjoe64.graphview.GraphView
                        android:id="@+id/graphAccel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="-60dp"
                        android:background="#11ffffff"
                        android:gravity="bottom" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>