                                android:animateLayoutChanges="true"
                                android:layout_marginEnd="2dp"
                                android:background="@color/transparent_red" />

                            <View
                                android:id="@+id/sat23"
                                android:layout_width="4dp"
                                android:layout_height="1dp"
                                android:animateLayoutChanges="true"
                                android:layout_marginEnd="2dp"
                                android:background="@color/transparent_red" />

                            <View
                                android:id="@+id/sat24"
                                android:layout_width="4dp"
                                android:layout_height="1dp"
                                android:animateLayoutChanges="true"
