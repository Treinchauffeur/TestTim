                                android:animateLayoutChanges="true"
                                android:layout_marginEnd="2dp"
                                android:background="@color/transparent_red" />

                            <View
                                android:id="@+id/sat20"
                                android:layout_width="4dp"
                                android:layout_height="1dp"
                                android:animateLayoutChanges="true"
                                android:layout_marginEnd="2dp"
                                android:background="@color/transparent_red" />

                            <View
                                android:id="@+id/sat21"
                                android:layout_width="4dp"
                                android:layout_height="1dp"
                                android:animateLayoutChanges="true"
                                android:layout_marginEnd="2dp"
                                android:background="@color/transparent_red" />

                            <View
                                android:id="@+id/sat22"
                                android:layout_width="4dp"
